          url: this.$store.state.api.finance.financeReject2,
          data: {
            id,
            gcid,
            rejectReason
          }
        }).then((response) => {
          _this.loading.back = false;
          const {data} = response;
          if (data.status.code == 200) {
            this.paymentRejectBtn = false
            _this.$message({
              message: '操作成功',
              type: 'success',
              duration: 1000
            });
            _this.reload()
          } else {
            _this.$message({
              showClose: true,
              message: data.status.msg,
              type: 'error',
              duration: 1000
            });
          }
        }).catch(error => {
          _this.loading.back = false;
        })
      },

      /**
       * 确认收款弹框  表单提交函数(产生了滞纳金)
       */
      confirmReceipt() {
        var _this = this
        var {id, contractId} = this.currentItem;
        var msg = this.rejectForm.msg;
        this.axios({
          method: 'post',
          url: this.$store.state.api.finance.affirmMessage,
          data: {
            id,
            contractId
          }
        }).then((response) => {
          var {data} = response
          if (data.status.code == 200) {
            _this.confirmReceiptFormDialog = data.result
          }
        })
      },
      //刷新数据
      reload() {
        var currentPage = 1
        this.fetchData(this.pageSize, currentPage);
      },
      /**
       * 恢复和减免滞纳金 表单提交函数
       */
      revertMoney(val) {
        var _this = this
        var {id, gcid} = this.currentItem;
        var exemptLateFeeStatus = val
        var exemptLateFee = this.currentItem.exemptLateFee; //输入可减免滞纳金
        var lateFee = this.currentItem.lateFee  // 滞纳金
        // 滞纳金数据进行校验
        if (Number(lateFee) < Number(exemptLateFee)) {
          this.$message.error('减免滞纳金金额有误')
          return
        }
        var exemptLateFeeRemark = this.currentItem.exemptLateFeeRemark

        var dataOption = {
          id,
          gcid,
          exemptLateFee,
          exemptLateFeeRemark,
          exemptLateFeeStatus
        }
        /*this.loading.breaks = true*/
        this.axios({
          method: 'post',
          url: this.$store.state.api.finance.exemptLateFee,
          data: dataOption
        }).then((response) => {
          _this.loading.breaks = false;
          const {data} = response;
          if (data.status.code == 200) {
            // 清除弹窗数据
            _this.currentItem.exemptLateFee = ''
            _this.currentItem.exemptLateFeeRemark = ''
            _this.$alert("操作成功", "提示", {
              callback: action => {
                _this.fetchData(_this.pageSize, _this.currentPage);
                _this.breaksMoneyBtn = false
              }
            });
          }
        }).catch(error => {
          _this.loading.breaks = false;

        });
      },
