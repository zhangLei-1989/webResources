      /**
       *  计算逾期状态 , 改变状态对应的class类名
       * @param item 每条数据
       * @returns {string} 用户状态信息
       */
      computedTime(item) {
        item.num = false
        var str = '';
        var time = Number(item.numDate); //逾期天数
        if (time > 0) {
          item.num = 1
          str += '逾' + time + '天'
        } else if (time == 0) {
          item.num = 2
          str += '已到期'
        } else if (time < 0 && Math.abs(time) < 20) {
          str += Math.abs(time) + '天后'
          item.num = 3
        } else {
          item.num = false
        }
        return str;
      },

      /**
       *  计算用户状态
       * @param item 每条数据
       * @returns {string} 用户状态
       */
      computedState(item) {
        var status = Number(item.status)
        var isRepay = Number(item.isRepay)
        var lateFee = Number(item.lateFee)
        item.classNum = false
        var str = ''

        if (isRepay == 1 && status == 0) {
          str = '待确认'
          item.classNum = 1
          item.sectionOption = ['确认收款', '驳回']
          item.placeholder = item.sectionOption[0]
        } else if (isRepay == 1 && status == 2) { // 应收驳回
          item.classNum = 3
          item.sectionOption = ['重新收款']
          item.placeholder = item.sectionOption[0]
          str = '已驳回'
        } else if (isRepay == 1 && status == 3) {  //已收中驳回
          item.classNum = 4
          item.sectionOption = ['确认收款', '驳回']
          item.placeholder = item.sectionOption[0]
          str = '被驳回'
        } else if (isRepay == 0 && status == 5) {
          item.classNum = 2

          if (lateFee > 0) {
            item.sectionOption = ['短信催收', '减免滞纳金', '恢复滞纳金']
            item.smsNoticeStauts = true
            item.placeholder = item.sectionOption[0]
          } else {
            item.sectionOption = ['短信催收']
            item.smsNoticeStauts = true
            item.placeholder = item.sectionOption[0]
          }
          str = '待收款'
        }
        return str;
      },

